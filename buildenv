#
# Build emacs using latest tarball
#
export ZOPEN_TYPE='TARBALL'
export ZOPEN_TARBALL_URL='http://git.savannah.gnu.org/cgit/emacs.git/snapshot/emacs-emacs-28.3-rc1.tar.gz'
export ZOPEN_TARBALL_DEPS='perl make m4 autoconf automake texinfo ncurses gawk zoslib'
export ZOPEN_EXTRA_CPPFLAGS="-DMAP_ANON=0"
export ZOPEN_EXTRA_CFLAGS="-DMAP_ANON=0"
export ZOPEN_RUNTIME_DEPS=""
export ZOPEN_MAKE_OPTS="all -j\$ZOPEN_NUM_JOBS"
export ZOPEN_INSTALL_OPTS="install -j\$ZOPEN_NUM_JOBS"
export ZOPEN_COMP=CLANG

export ZOPEN_BOOTSTRAP="./autogen.sh"
export ZOPEN_EXTRA_CONFIGURE_OPTS='--with-xpm=no --with-jpeg=no --with-png=no --with-gif=no --with-tiff=no --with-gnutls=no --without-x --without-all --with-dumping=none'

zopen_check_results()
{
  return 3
}
